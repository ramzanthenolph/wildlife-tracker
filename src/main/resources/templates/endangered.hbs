{{#partial "preContent"}}
    <div class="jumbotron jumbotrion-fluid animal-jumbotron">
        <div class="container">
            <h1 class="display-3">Red Stone!</h1>
            <p class="lead">The animal conservancy</p>
        </div>
    </div>
{{/partial}}

{{#partial "content"}}
    {{#if endangered}}
        <table class="table text-center">
            <h4 class="text-center">Below are all the endangered animals spotted by our rangers</h4>
            <thead class="thead-dark">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Health</th>
                <th scope="col">Age</th>
            </tr>
            </thead>
            <tbody>
            {{#each endangered}}
                <tr>
                    <td>{{name}}</td>
                    <td>{{health}}</td>
                    <td>{{age}}</td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    {{else}}
        <h5 class="text-center">No animals sighted yet. Report a sighting to have it appear here</h5>
    {{/if}}

{{/partial}}

{{> layout.hbs}}